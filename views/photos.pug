doctype
html
    include includes/header.pug
    title= title
main    
    body
        header
        br
        div#message.container.center-align    
                button.btn.orange(onclick="window.location.href='/post'") Make New Post

        br
        div.container
            div.row
                div.col.s6.offset-s3
                if posts
                    each post in posts
                        div.card.hoverable.materialboxed
                            div.card-image
                                img(src='uploads/'+post.image)
                                span.card-title= userName
                            div.card-content
                                p= post.caption
                            div.card-action
                                a(href="#")
        div#message.container.center-align    
footer            
    include includes/footer.pug



